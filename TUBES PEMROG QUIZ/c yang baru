typedef struct {
    char question[256];
    char options[4][64];
    char correctOption;
} Question;

float timed_input(char *input, float timeout, float *waktusisa) {
    float time_elapsed = 0;
    while (time_elapsed < timeout) {
        if (kbhit()) {
            *input = getch();
            *waktusisa = timeout - time_elapsed;
            return 1;
        }
        Sleep(1000);
        time_elapsed++;
    }
    *waktusisa = 0;
    return 0;
}

