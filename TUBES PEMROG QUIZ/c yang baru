        if (pilihan && (jawab == agamaQuestionsez[i].correctOption || jawab == tolower(agamaQuestionsez[i].correctOption))) {
            printf("\n\nBenar!!");
            point += waktusisa;
            printf("\n\nPoin kamu adalah %.2f\n\n", waktusisa);
            getch();
        } else {
            printf("\n\nUpss!!!Kamu tidak mendapatkan poin...\n\n");
            nyawa++;
            getch();
