// Fungsi untuk mengambil input dengan batas waktu tertentu
float timed_input(char *input, float timeout, float *waktusisa) {
    // Inisialisasi waktu yang telah berlalu
    float time_elapsed = 0;
    // Loop hingga waktu yang telah berlalu lebih kecil dari batas waktu
    while (time_elapsed < timeout) {
        // Jika ada input dari keyboard
        if (kbhit()) {
            // Mengambil karakter input
            *input = getch();
            // Menghitung sisa waktu
            *waktusisa = timeout - time_elapsed;
            // Mengembalikan nilai 1 (berhasil mendapatkan input)
            return 1;
        }
        // Menunggu selama 1 detik
        Sleep(1000);
        // Menambah waktu yang telah berlalu
        time_elapsed++;
    }
    // Jika waktu habis, mengatur sisa waktu ke 0
    *waktusisa = 0;
    // Mengembalikan nilai 0 (gagal mendapatkan input)
    return 0;
}

