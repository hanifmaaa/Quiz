			        }if (nyawa >= 3) {// nyawa sudah habis dan melebihi samadengan 3
					system("cls");//bersihkan layar
	                printf("\n\nKamu telah menjawab salah lebih dari 3 kali.\n");
	                printf("Kembali ke menu utama...\n");
	                _getch();
	                goto tampilanmenu;//ke tampilan menu
            }
			    }
				sedangElka ://elektronika sedang
					system("cls");//bersihkan layar
					tips();//tampilkan tips
                	printf("\n\n\n\nKlik Y  untuk memulai !!");
                	printf("\nKlik apapun untuk kembali ke menu!");
                	pilihan = getch();
                	if (pilihan == 'y' || pilihan == 'Y'){// kondisi jika memilih y/Y
                    goto soalsedangElka;//pergi ke soal elka sedang
                	}
                	else {//selain itu
                    goto tampilanmenu;
                }
                soalsedangElka://soal sedang elka
			    system("cls");//bersihkan layar
			    point = 0;//niali point
			    nyawa = 0;//nilai nyawa
			    for(i=1; i<=5; i++){// loop soal
			        int pilihan;//deklarasi var
			        char jawab;
			        float waktusisa;
			        system("cls");
			        r5 = i;
			        switch(r5) {
			            case 1://soal 1
			                printf("\n\n1. Komponen apa yang digunakan untuk menyimpan muatan listrik?");//pertanyaan
			                printf("\nA. Resistor\tB. Kapasitor\nC. Induktor\tD. Transistor");//pilihan jawaban
			                pilihan = timed_input(&jawab, 10, &waktusisa);//waktu 10 detik
			                if(pilihan && (jawab == 'b' || jawab == 'B')){//loop jika jawaban b/B
			                    printf("\n\nBenar!!");//output
			                    point += waktusisa;//untuk menentukan point
			                    printf("\n\nPoin kamu adalah %.2f\n\n", waktusisa);//output point
			                    getch();//menunggu pengguna menekan tombol di keyboard
			                    break;//keluar dari loop
			                } else {//kondisi lain
			                    printf("\n\nUpss!!!Kamu tidak mendapatkan poin...\n\n");
			                    nyawa++;getch();
			                    break;
			                }
			            case 2:// soal kedua
			                printf("\n\n2. Hukum Ohm dinyatakan dengan persamaan?");// pertanyaan
			                printf("\nA. V = I/R\tB. I = V/R\nC. P = VI\tD. V = IR");//pilihan jawaban
			                pilihan = timed_input(&jawab, 10, &waktusisa);
			                if(pilihan && (jawab == 'd' || jawab == 'D')){//loop jika memilih d/D
			                    printf("\n\nBenar!!");
			                    point += waktusisa;
			                    printf("\n\nPoin kamu adalah %.2f\n\n", waktusisa);
			                    getch();
			                    break;
			                } else {//loop jika memilih jawaban lain
			                    printf("\n\nUpss!!!Kamu tidak mendapatkan poin...\n\n");
			                    nyawa++;getch();
			                    break;
			                }
			            case 3://soal 3
			                printf("\n\n3. Alat yang digunakan untuk mengukur arus listrik adalah?");// pertanyaan
			                printf("\nA. Voltmeter\t\tB. Ohmmeter\nC. Amperemeter\t\tD. Multimeter");// pilihan jawaban
			                pilihan = timed_input(&jawab, 10, &waktusisa);
			                if(pilihan && (jawab == 'c' || jawab == 'C')){//loop jika memilih c/C
			                    printf("\n\nBenar!!");
			                    point += waktusisa;
			                    printf("\n\nPoin kamu adalah %.2f\n\n", waktusisa);
			                    getch();
			                    break;
			                } else {// loop jika memilih kondisi lain
			                    printf("\n\nUpss!!!Kamu tidak mendapatkan poin...\n\n");
			                    nyawa++;getch();
			                    break;
			                }
			            case 4:// soal 4
			                printf("\n\n4. Unit dari kapasitansi adalah?");//pertanyaan
			                printf("\nA. Ohm\t\tB. Farad\nC. Henry\tD. Coulomb");//pilihan jawaban
			                pilihan = timed_input(&jawab, 10, &waktusisa);
			                if(pilihan && (jawab == 'b' || jawab == 'B')){//loop jika memilih B/b
			                    printf("\n\nBenar!!");
			                    point += waktusisa;
			                    printf("\n\nPoin kamu adalah %.2f\n\n", waktusisa);
			                    getch();
			                    break;
			                } else {//loop jika memilih kondisi lain
			                    printf("\n\nUpss!!!Kamu tidak mendapatkan poin...\n\n");
			                    nyawa++;getch();
			                    break;
			                }
			            case 5://soal 5
			                printf("\n\n5. Komponen apa yang digunakan untuk mengatur aliran arus dalam satu arah?");// pertanyaan
			                printf("\nA. Resistor\tB. Kapasitor\nC. Dioda\tD. Induktor");// pilihan jawaban
			                pilihan = timed_input(&jawab, 10, &waktusisa);
			                if(pilihan && (jawab == 'c' || jawab == 'C')){//loop jika memilih c/C
			                    printf("\n\nBenar!!");
			                    point += waktusisa;
			                    printf("\n\nPoin kamu adalah %.2f\n\n", waktusisa);
			                    getch();
			                    goto nilai;//menampilkan nilai
			                    break;
			                } else {// loop untuk kondisi lain
			                    printf("\n\nUpss!!!Kamu tidak mendapatkan poin...\n\n");
			                    nyawa++;getch();
			                    goto nilai;
			                    break;
			                }
			        }if (nyawa >= 3) {// jika nyawa sudah lebih samadengan 3
					system("cls");// bersihkan layar
	                printf("\n\nKamu telah menjawab salah lebih dari 3 kali.\n");
	                printf("Kembali ke menu utama...\n");
	                _getch();
	                goto tampilanmenu;
            }
